<resources>
    <!-- 四个按钮 -->
    <style name="button_1">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:background">@drawable/button_1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="button_2" parent="button_1">
        <item name="android:background">@drawable/button_2</item>
    </style>

    <style name="button_3" parent="button_1">
        <item name="android:background">@drawable/button_3</item>
    </style>

    <style name="button_4" parent="button_1">
        <item name="android:background">@drawable/button_4</item>
    </style>

    <!-- 弹窗按钮 -->
    <style name="confirm_button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>

        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">16dp</item>

        <item name="android:background">@drawable/button_confirm</item>
        <item name="android:text">Save</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="delete_button" parent="confirm_button">
        <item name="android:background">@drawable/button_delete</item>
        <item name="android:text">Delete</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="cancel_button" parent="confirm_button">
        <item name="android:background">@drawable/button_cancel</item>
        <item name="android:text">Cancel</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <!-- 输入框 -->
    <style name="text_input">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSelectHandle">@drawable/text_handle</item>
        <item name="android:textSelectHandleLeft">@drawable/text_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/text_handle_right</item>
        <item name="android:textColorHighlight">@color/blue_light</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
    </style>

    <!-- 横线 -->
    <style name="file_manager">
        <item name="android:background">@color/grey_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!-- 软件标题栏高度 -->
    <dimen name="title_height">55dp</dimen>
    <dimen name="title_size">20dp</dimen>

    <!-- 窗口tab高度/宽度 -->
    <dimen name="tab_height">35dp</dimen>
    <dimen name="tab_width">125dp</dimen>
    <dimen name="tab_between">10dp</dimen>

    <!-- file_manager中每一项的高度 -->
    <dimen name="item_height">65dp</dimen>

    <!-- save_manager底部提示框高度 -->
    <dimen name="save_height">120dp</dimen>

    <!-- open_manager底部提示框高度 -->
    <dimen name="open_height">60dp</dimen>

</resources>