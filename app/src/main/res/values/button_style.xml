<resources>

    <!-- Base application theme. -->
    <style name="tab_active">
        <!-- Customize your theme here. -->
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/tab_width</item>
        <item name="android:background">@drawable/tab_active</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="blue">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:background">@drawable/oval_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="blue1" parent="blue">
        <item name="android:background">@drawable/oval_blue1</item>
    </style>

    <style name="blue2" parent="blue">
        <item name="android:background">@drawable/oval_blue2</item>
    </style>

    <style name="blue3" parent="blue">
        <item name="android:background">@drawable/oval_blue3</item>
    </style>

    <style name="confirm_button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>

        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">16dp</item>

        <item name="android:background">@drawable/confirm_button</item>
        <item name="android:text">Save</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="delete_button" parent="confirm_button">
        <item name="android:background">@drawable/delete_button</item>
        <item name="android:text">Delete</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="cancel_button" parent="confirm_button">
        <item name="android:background">@drawable/cancel_button</item>
        <item name="android:text">Cancel</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <!-- 软件标题栏高度 -->
    <dimen name="title_height">55dp</dimen>

    <!-- 窗口tab高度/宽度 -->
    <dimen name="tab_height">35dp</dimen>
    <dimen name="tab_width">110dp</dimen>

    <!-- file_manager中每一项的高度 -->
    <dimen name="file_outer">65dp</dimen>

    <!-- file_manager底部提示框高度 -->
    <dimen name="save_height">210dp</dimen>

</resources>